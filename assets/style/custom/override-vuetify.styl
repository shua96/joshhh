@require '~vuetify/src/stylus/app'

#keep
  .v-navigation-drawer__border
    display: none

.logout-card
  min-width: 300px !important

.text-center
  text-align: center !important

.v-content
  background-color: #EEEEEE !important

.v-sheet--offset
  top: -15px
  position: relative

table.v-table thead th
  font-weight: 500
  font-size: 12px
  color: black 1mportant

.theme--dark.v-table thead th {
  background-color: #424242;
}

.theme--light.v-table thead th {
  background-color: #ffffff;
}

.v-menu__content::-webkit-scrollbar
  width: 5px

  &-track
    -webkit-box-shadow: inset 0 0 2px #888

  &-thumb
    background-color: #fbb730
    
.v-text-field__prefix
  color: #808080 !important

.v-text-field__suffix
  color: #808080 !important

.v-menu__content
  background-color: #fff !important
  max-width: 450px !important

@media only screen and (min-width: 600px)
  .filter_tab>div>div>.v-tabs__container--fixed-tabs .v-tabs__div, .filter_tab>div>div>.v-tabs__container--icons-and-text .v-tabs__div
    min-width: 0px !important

.filter_tab>div>div>.v-tabs__container--fixed-tabs .v-tabs__div>a, .filter_tab>div>div>.v-tabs__container--icons-and-text .v-tabs__div>a
  padding: 0px !important

.filter_tab>div>div>.v-tabs__container--icons-and-text
  height: 85px !important

.v-text-field__suffix
  font-size: 14px !important

table.v-table tbody td
  cursor: pointer !important

.theme--dark.v-icon
  color: white !important

.theme--light.v-input--is-disabled .v-label, .theme--light.v-input--is-disabled input, .theme--light.v-input--is-disabled textarea
  color: black !important

.fc-content
  display: flex
  flex-direction: column

.fc-event
  border: 0 !important